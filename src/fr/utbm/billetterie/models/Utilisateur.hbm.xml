<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>   
    <class name="fr.utbm.billetterie.models.Utilisateur" table="UTILISATEUR">
        <id name="id" column="ID">
            <generator class="sequence">
     			<param name="sequence">ACTOR_ID_SEQ</param>
			</generator>
        </id>        
        <property name="email" column="EMAIL" />
        <property name="nom" column="NOM" />
        <property name="prenom" column="PRENOM" />
        <property name="rue" column="RUE" />
        <property name="ville" column="VILLE" />
        <property name="numero_rue" column="NUMERO_RUE" />
        <property name="code_postal" column="CODE_POSTAL" />
        <property name="admin" column="ADMIN" />
    </class>
</hibernate-mapping>